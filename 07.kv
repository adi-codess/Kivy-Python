#: import utils kivy.utils
<MyWidgetLayout>
    name:name
    task:task
    GridLayout:
        cols: 1
        size : root.width, root.height
        GridLayout:
            cols: 2
            size_hint_x: None
            size_hint_y: None
            width: root.width
            height: 250

            Label:
                text: "Name : "
            TextInput:
                id: name
            
            Label:
                text: "Task : "
            TextInput:
                id: task
        
        Button:
            text: "Print !"
            background_normal: ''
            background_color: utils.get_color_from_hex("#597832")
            size_hint_x:None
            size_hint_y: None
            width: 300
            height: 50
            font_size: 20
            on_press: root.pressed()